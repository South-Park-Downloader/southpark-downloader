// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
  "name": "South Park Downloader",
  "build": {
    "dockerfile": "docker/Dockerfile"
  },
  "remoteUser": "vscode",
  "containerEnv": {
    "SOUTHPARK_DL_DATA_DIR": "${variable:containerWorkspaceFolder}/.spdl/data",
    "YOUTUBE_DL_BIN": "/usr/local/bin/youtube-dl",
    "FFMPEG_DIR": "/usr/local/bin"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "installZsh": "true",
      "upgradePackages": "true",
      "uid": "1000",
      "gid": "1000",
      "installOhMyZsh": "true",
      "nonFreePackages": "true"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "lacroixdavid1.vscode-format-context-menu",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/lifecycle/postCreate"
}
